{
  "dashboard": {
    "title": "BMI Application Overview",
    "tags": ["bmi", "docker", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Container Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job='backend'}",
            "legendFormat": "Backend"
          }
        ]
      },
      {
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}
